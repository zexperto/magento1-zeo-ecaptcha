<?xml version="1.0"?>
<config>
  <modules>
    <Zeo_Recaptcha>
      <version>1.0.0</version>
    </Zeo_Recaptcha>
  </modules>
  <global>
  	<models>
			<recaptcha>
				<class>Zeo_Recaptcha_Model</class>
			</recaptcha>
		</models>
    <helpers>
      <recaptcha>
        <class>Zeo_Recaptcha_Helper</class>
      </recaptcha>
    </helpers>
  </global>
  <frontend>
         <events>
             <core_block_abstract_to_html_before>
              <observers>
                  <zeo_recaptcha_core_block_abstract_prepare_layout_before>
                      <class>Zeo_Recaptcha_Model_Observer</class>
                      <method>prepareLayoutBefore</method>
                  </zeo_recaptcha_core_block_abstract_prepare_layout_before>
              </observers>
             </core_block_abstract_to_html_before>
           
             <controller_action_predispatch>
				<observers>
					<zeo_recaptcha_controller_action_predispatch>
						<type>singleton</type>
						<class>Zeo_Recaptcha_Model_Observer</class>
						<method>checkCaptcha</method>
					</zeo_recaptcha_controller_action_predispatch>
				</observers>
			</controller_action_predispatch>
         </events>
     </frontend>
</config> 